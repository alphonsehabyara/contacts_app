<h1> You are editing a contact </h1>


<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>

  <div class="form-group">
    First Name: <input type="text" name="first_name" class="form-group" value=<%= @contact.first_name %>>
  </div>
  <div class="form-group">
    Last Name: <input type="text" name="last_name" class="form-group" value=<%= @contact.last_name %>>
  </div>
  <div class="form-group">
    Email: <input type="text" name="email" class="form-group" value=<%= @contact.email %>>
  </div>
  <div>
  Phone Number: <input type="text" name="phone_nber" class="form-group" value=<%= @contact.phone_nber %>> 
  </div>

  <input type="submit" name="submit" class="btn btn-info">
  </div>
<% end %>